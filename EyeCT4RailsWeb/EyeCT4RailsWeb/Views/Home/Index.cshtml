@using EyeCT4RailsWeb.Models

@{
    ViewBag.Title = "Index";
}

<h1>EyeCT4 Rails</h1>
<div class="text-center"><text class="alert-danger">@ViewBag.error</text></div>
<p class="text-center">Login om toegang te krijgen het Remisesysteem.</p>

<div class="row">
    <div class="col-lg-offset-4 col-lg-4">

        <form method="post" id="loginform">
            <div class="form-group">
                <input name="gebruikersnaam" class="form-control" placeholder="Gebruikersnaam" />
            </div>
            <div class="form-group">
                <input name="wachtwoord" type="password" class="form-control" placeholder="Wachtwoord" />
            </div>
            <br />
            <input type="submit" value="Login" class="btn btn-primary" />
        </form>
    </div>
</div>

