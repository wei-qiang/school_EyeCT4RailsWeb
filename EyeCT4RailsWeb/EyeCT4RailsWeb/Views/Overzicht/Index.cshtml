@using EyeCT4RailsWeb.Models

@{
    ViewBag.Title = "Index";
}

<h2>Tram Overzicht</h2>
<br />
<h3>Status aanpassen</h3>
@ViewBag.ViewMessage
<form class="form-horizontal" method="post" action="/Overzicht/ChangeStatus">
    <label>Tram ID:</label>
    <input class="form-control" type="number" name="tram_id" min="0" />
    <label>Nieuwe status:</label>
    <select class="form-control" name="status">
        <option>Remise</option>
        <option>Schoonmaak</option>
        <option>Defect</option>
        <option>Dienst</option>
    </select>
    <label>Prioriteit:</label>
    <input class="form-control" type="number" name="Prioriteit" min="0" />
    <input class="btn btn-default" type="submit" value="Tram inrijden" />
</form>
<br />

<table class="table table-striped table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>tram nummer</th>
            <th>tram type</th>
            <th>spoor nummer</th>
            <th>sector nummer</th>
            <th>status</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.TramNummer</td>
                <td>@item.Tramtype</td>
                <td>@item.Sector.Spoor</td>
                <td>@item.Sector.ID</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>

