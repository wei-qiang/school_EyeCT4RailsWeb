@using EyeCT4RailsWeb.Models
@model Gebruiker


<h2 class="text-center">Nieuwe Gebruiker</h2>
<br />
<p class="text-center">Maak een nieuwe gebruiker aan door onderstaand formulier in te vullen.</p>
<div class="text-center"><text class="alert-danger">@ViewBag.error</text></div>
<br />


<div class="row">
    <div class="col-lg-offset-4 col-lg-4">
        <form method="post">

            <div class="form-group">
                <input name="gebruikersnaam"  class="form-control" placeholder="Gebruikersnaam"/>
            </div>
            <div class="form-group">
                <input name="wachtwoord" type="password" class="form-control" placeholder="Wachtwoord" />
            </div>
            <div class="form-group">
                <label class="text-info">Functie</label>
                <select name="functie" class="form-control">
                    @foreach (Functie func in Enum.GetValues(typeof(Functie)))
            {
                        <option value="@func.ToString()">@func.ToString()</option>
                    }
                </select>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary" />

        </form>
    </div>
</div>

